{
  "devDependencies": {
    "cross-env": "5.2.0",
    "fs-extra": "7.0.1",
    "glob": "7.1.3",
    "lerna": "3.10.5",
    "rimraf": "2.6.3"
  },
  "engines": {
    "node": ">=8.12.0",
    "npm": ">=6.4.1",
    "yarn": ">=1.12.3"
  },
  "name": "test_dapps",
  "private": true,
  "scripts": {
    "ci": "yarn install && npm-run-all qa:*",
    "clean": "npx cross-env CMD=clean_ npm run with-embark",
    "clean_": "npx lerna run --parallel clean",
    "install:embark": "node scripts/install-embark",
    "postinstall": "lerna bootstrap --no-ci",
    "qa": "npm run reboot:full && npm-run-all qa:*",
    "qa:1": "npm-run-all install:embark test:qa",
    "reboot": "npm run reset && yarn install",
    "reboot:full": "npm run reset:full && yarn install",
    "release:prepare": "npm run reset:demo && yarn install",
    "reset": "npx cross-env CMD=reset_ npm run with-embark",
    "reset:demo": "npx rimraf packages/embark_demo",
    "reset:full": "npm run reset:demo && npm run reset && npx rimraf .embark node_modules",
    "reset_": "npx lerna run --parallel reset",
    "setup:demo": "node scripts/setup-demo",
    "test": "cross-env CMD=test_ npm run with-embark",
    "test:qa": "cross-env CMD=test_ npm run with-embark:pkg",
    "test_": "npm run setup:demo && npx lerna run --concurrency=1 --stream test",
    "with-embark": "npx cross-env EMBARK_BIN=../../../packages/embark/bin/embark SCRIPT_EMBARK_BIN=../../packages/embark/bin/embark npm run with-embark_",
    "with-embark:pkg": "npx cross-env EMBARK_BIN=../../.embark/packaged/node_modules/embark/bin/embark SCRIPT_EMBARK_BIN=../.embark/packaged/node_modules/embark/bin/embark npm run with-embark_",
    "with-embark_": "cross-env-shell EMBARK_NO_SHIM=t \"npm run $CMD\""
  }
}
