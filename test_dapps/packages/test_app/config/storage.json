    "upload": {
      "provider": "swarm",
      "host": "localhost",
      "port": 8500,
      "getUrl": "http://localhost:8500/bzzr:/"
    }
  },
  "livenet": {
    "enabled": true,
    "upload":{
      "provider": "ipfs",
